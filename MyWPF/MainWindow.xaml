<Window x:Class="MyWPF.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:MyWPF"
		mc:Ignorable="d"
		Title="Учет выдачи книг" Height="450" Width="800" Icon="/BookIcon.png">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="186*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>


        <ScrollViewer Grid.ColumnSpan="2">
            <StackPanel>
                <Button Content="Добавить книгу" HorizontalAlignment="Center" Command="{Binding CreateEmptyBook}"/>
                <ListView ItemsSource="{Binding BooksList}" Grid.Column="0" ItemTemplate="{StaticResource ListViewItemBook}" IsSynchronizedWithCurrentItem="True" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <ContentControl Grid.Column="2" Content="{Binding BooksList}" Grid.ColumnSpan="2">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="Название:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Автор:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Издатель:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding PublisherName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Адрес издателя:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding PublisherAddress, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button Name="bChangeStatus" Content="Вернуть" Margin="15" Width="100" Command="{Binding ChangeStatusCommand}"/>

                            <TextBlock Name="txtNewClient1" Text="Фамилия нового владельца:" Margin="0,10,0,0" Visibility="Hidden"/>
                            <TextBox Name="txtNewClient2" Text="{Binding NewClientName, UpdateSourceTrigger=PropertyChanged}" Visibility="Hidden"/>

                        </StackPanel>
                    </Border>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="true">
                            <Setter TargetName="bChangeStatus" Property="Content" Value="Взять"/>
                            <Setter TargetName="txtNewClient1" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="txtNewClient2" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                    </DataTemplate.Triggers>

                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>

        <TreeView Grid.Column="4">
            <TreeViewItem Header="Список книг и их предыдущих владельцев" ItemsSource="{Binding BooksList}" ItemTemplate="{StaticResource TreeItemBook}"/>
        </TreeView>


    </Grid>


</Window>
