<Window x:Class="MyWPF.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:MyWPF"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		
		

		<ListView ItemsSource="{Binding BooksList}" Grid.Column="1" ItemTemplate="{StaticResource ListViewItemBook}"/>


		<Expander Header="Дерево книг" ExpandDirection="Left" Grid.Column="1">
			<TreeView>
				<TreeViewItem Header="Список книг и их предыдущих владельцев" ItemsSource="{Binding BooksList}" ItemTemplate="{StaticResource TreeItemBook}"/>
			</TreeView>
		</Expander>
	</Grid>
	
	
</Window>
